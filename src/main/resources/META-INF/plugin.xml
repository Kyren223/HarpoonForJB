<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>me.kyren223.harpoonforjb</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>HarpoonForJB</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="ulmliad223@gmail.com" url="https://discord.gg/7vpTv7m3QR">Kyren223</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    <h3>HarpoonForJB</h3>
    Originally created by ThePrimeagen as a Neovim plugin, "Harpoon"<br>
    revolutionized code navigation with its intuitive targeting and<br>
    seamless traversal capabilities.<br>
    HarpoonForJB aims to bring the same experience to JetBrains IDEs.<br>
    <br>
    For fans of the original "Harpoon" plugin, "HarpoonForJB"<br>
    offers a familiar yet enhanced experience tailored for JetBrains IDEs.<br>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true"  config-file="HarpoonForJB-IdeaVim.xml">IdeaVIM</depends>
    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="me.kyren223.harpoonforjb.AppSettingsConfigurable"
                id="me.kyren223.harpoonforjb.AppSettingsConfigurable"
                displayName="HarpoonForJB Settings"/>
        <applicationService serviceImplementation="me.kyren223.harpoonforjb.AppSettingsState"/>
    </extensions>

    <actions>
        <group id="me.kyren223.harpoonforjb.mainGroup"
               text="Harpoon" description="Harpoon"
               popup="true">
        </group>

        <!-- Harpoon Select Buffer -->
        <action id="HarpoonSelect1"
                class="me.kyren223.harpoonforjb.HarpoonSelectAction"
                text="Select Buffer 1">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>
        <action id="HarpoonSelect2"
                class="me.kyren223.harpoonforjb.HarpoonSelectAction"
                text="Select Buffer 2">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>
        <action id="HarpoonSelect3"
                class="me.kyren223.harpoonforjb.HarpoonSelectAction"
                text="Select Buffer 3">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>
        <action id="HarpoonSelect4"
                class="me.kyren223.harpoonforjb.HarpoonSelectAction"
                text="Select Buffer 4">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>

        <!-- Select Previous & Next Buffer -->
        <action id="HarpoonSelectPrev"
                class="me.kyren223.harpoonforjb.HarpoonSelectAction"
                text="Select Previous Buffer">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>
        <action id="HarpoonSelectNext"
                class="me.kyren223.harpoonforjb.HarpoonSelectAction"
                text="Select Next Buffer">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>

        <!-- Append -->
        <action id="HarpoonAppend"
                class="me.kyren223.harpoonforjb.HarpoonAppendAction"
                text="Append File">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>

        <!-- UI Actions -->
        <action id="HarpoonToggleQuickMenu"
                class="me.kyren223.harpoonforjb.HarpoonToggleQuickMenuAction"
                text="Toggle Quick Menu">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>

        <action id="HarpoonQuickMenuSelect"
                class="me.kyren223.harpoonforjb.HarpoonQuickMenuSelectAction"
                text="Quick Menu Select">
            <add-to-group group-id="me.kyren223.harpoonforjb.mainGroup"/>
        </action>

    </actions>
</idea-plugin>